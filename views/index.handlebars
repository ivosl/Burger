<div class="container">
    <div class="jumbotron">
<h1>Eat Da Burger!</h1>
</div>
</div>
<h2>Burgers to eat!</h2>

<ul >
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/devour devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/devour devoured=false}}
    <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
    {{/if}}
  {{/each}}
</ul>
<div class = "card">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  </div>

  <button type="submit">Add Burger</button>
</form>
